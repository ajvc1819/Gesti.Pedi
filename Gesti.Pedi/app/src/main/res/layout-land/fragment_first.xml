<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    tools:context=".Main.FirstFragment">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/title_border"
        android:gravity="center"
        android:text="@string/Title"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnClientes"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/buttons_border"
        android:text="@string/clientes_text"
        android:textColor="#FFFFFF"
        android:gravity="bottom|center"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

    <Button
        android:id="@+id/btnPedidos"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/buttons_border"
        android:text="@string/pedidos_text"
        android:gravity="bottom|center"
        android:paddingBottom="50dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnInformes"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

    <Button
        android:id="@+id/btnInformes"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/buttons_border"
        android:text="@string/informes_text"
        android:gravity="bottom|center"
        android:paddingBottom="50dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnClientes"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

    <Button
        android:id="@+id/btnStock"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/buttons_border"
        android:text="@string/stock_text"
        android:gravity="bottom|center"
        android:paddingBottom="50dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPedidos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="165dp"
        android:layout_height="118dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toBottomOf="@+id/txtTitulo"
        app:layout_constraintStart_toStartOf="@+id/txtTitulo"
        app:layout_constraintTop_toTopOf="@+id/txtTitulo"
        app:srcCompat="@drawable/logotipo" />

    <ImageView
        android:id="@+id/imgStock"
        android:layout_width="105dp"
        android:layout_height="61dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/imgstock"
        app:layout_constraintBottom_toBottomOf="@+id/btnStock"
        app:layout_constraintEnd_toEndOf="@+id/btnStock"
        app:layout_constraintStart_toStartOf="@+id/btnStock"
        app:layout_constraintTop_toTopOf="@+id/btnStock"
        app:srcCompat="@drawable/stock" />

    <ImageView
        android:id="@+id/imgClientes"
        android:layout_width="115dp"
        android:layout_height="64dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/imgclientes"
        app:layout_constraintBottom_toBottomOf="@+id/btnClientes"
        app:layout_constraintEnd_toEndOf="@+id/btnClientes"
        app:layout_constraintStart_toStartOf="@+id/btnClientes"
        app:layout_constraintTop_toTopOf="@+id/btnClientes"
        app:srcCompat="@drawable/clientes" />

    <ImageView
        android:id="@+id/imgInformes"
        android:layout_width="83dp"
        android:layout_height="65dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/imginformes"
        app:layout_constraintBottom_toBottomOf="@+id/btnInformes"
        app:layout_constraintEnd_toEndOf="@+id/btnInformes"
        app:layout_constraintStart_toStartOf="@+id/btnInformes"
        app:layout_constraintTop_toTopOf="@+id/btnInformes"
        app:srcCompat="@drawable/informes" />

    <ImageView
        android:id="@+id/imgPedidos"
        android:layout_width="78dp"
        android:layout_height="69dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/imgpedidos"
        app:layout_constraintBottom_toBottomOf="@+id/btnPedidos"
        app:layout_constraintEnd_toEndOf="@+id/btnPedidos"
        app:layout_constraintStart_toStartOf="@+id/btnPedidos"
        app:layout_constraintTop_toTopOf="@+id/btnPedidos"
        app:srcCompat="@drawable/pedido" />

</androidx.constraintlayout.widget.ConstraintLayout>
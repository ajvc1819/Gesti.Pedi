<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.anjovaca.gestipedi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogOut"></activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Register"
            android:label="Registrarse"
            android:parentActivityName=".InitSession">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anjovaca.gestipedi.InitSession" />
        </activity>
        <activity
            android:name=".InitSession"
            android:label="Iniciar Sesión"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anjovaca.gestipedi.MainActivity" />
        </activity>
        <activity
            android:name=".EditClient"
            android:label="Editar Cliente"
            android:parentActivityName=".ClienteDetalle">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anjovaca.gestipedi.ClienteDetalle" />
        </activity>
        <activity
            android:name=".ClienteDetalle"
            android:label="Detalle Cliente"
            android:parentActivityName=".ClientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anjovaca.gestipedi.ClientActivity" />
        </activity>
        <activity
            android:name=".AnyadirCliente"
            android:label="Añadir"
            android:parentActivityName=".ClientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anjovaca.gestipedi.ClientActivity" />
        </activity>
        <activity
            android:name=".StockActivity"
            android:label="Stock"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anjovaca.gestipedi.MainActivity" />
        </activity>
        <activity
            android:name=".PedidosActivity"
            android:label="Pedidos"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anjovaca.gestipedi.MainActivity" />
        </activity>
        <activity
            android:name=".InformesActivity"
            android:label="Informes"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anjovaca.gestipedi.MainActivity" />
        </activity>
        <activity
            android:name=".ClientActivity"
            android:label="Clientes"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anjovaca.gestipedi.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>